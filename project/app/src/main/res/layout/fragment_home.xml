<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:id="@+id/information"
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="98dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/information" />
        <ImageView
            android:id="@+id/time_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:src = "@drawable/time_search"/>
        <ImageView
            android:id="@+id/floor_search"
            android:layout_width="100dp"
            android:layout_height="98dp"
            android:src = "@drawable/floor_search"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/book"
            android:layout_width="100dp"
            android:layout_height="94dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/book"
            android:layout_weight="0.11" />

        <ImageView
            android:id="@+id/book_calendar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="15dp"
            android:src = "@drawable/book_calendar"/>
        <ImageView
            android:id="@+id/book_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src = "@drawable/book_search"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:id="@+id/path_search"
            android:layout_marginLeft="12dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:src = "@drawable/path_search"
            android:layout_weight="0.30"/>

        <ImageView
            android:id="@+id/beacon_alarm"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="15dp"
            android:src = "@drawable/beacon_alarm"
            android:layout_weight="0.05" />

        <ImageView
            android:id="@+id/mobile2"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src = "@drawable/mobile"/>
    </LinearLayout>

</LinearLayout>

