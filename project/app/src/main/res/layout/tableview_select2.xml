<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:background="#9d2235"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backbackbutton"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_back"
            android:src="@drawable/ic_back"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="이전"
            android:textColor="#FFFFFF"
            android:background="#00FF0000"
            android:padding="3dp"
            android:drawablePadding="-20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="선택한 도서 목록"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="0.5">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="115dp"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:entries="@array/country_arrays1" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:entries="@array/country_arrays2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnCommit"
        android:text="찾기"/>

        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_weight="0.95"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.50"
            android:weightSum="1"
            android:layout_marginTop="15dp"
        >

            <TextView
                android:id="@+id/storetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="선택한 과목 이름"
                android:layout_marginBottom="13dp"
                android:textSize="15dp"
                android:textAlignment="center"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="right">
            <Button
                android:id="@+id/storebutton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="값 저장"
                android:background="@drawable/stroke_join"/>


    <Button
        android:layout_gravity="end"
        android:id="@+id/mapbutton1"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:background="#33FFFFFF"/>

    <Button
        android:layout_gravity="end"
        android:id="@+id/mapbutton2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="지도로 보기"
        android:background="@drawable/stroke_join"/>


            <Button
                android:layout_gravity="end"
                android:id="@+id/mapbutton3"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="#33FFFFFF"/>
</LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>